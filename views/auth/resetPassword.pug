extends ../layouts/layout.pug
block content
    .container
      .row.justify-content-center
        .col-md-8
          .card
            .card-header Reset Password
            .card-body
              if sent
                .alert.alert-success(role='alert')
                  | A fresh verification link has been sent to your email address.
              form(method='POST' action='sendResetPassword')
                .form-group.row
                  label.col-md-4.col-form-label.text-md-right(for='credential') E-Mail/Username
                  .col-md-6
                    input#credential-input.form-control(type='text' name='credential' required='' autocomplete='credential' autofocus='')
                    span.invalid-feedback(role='alert')
                      strong
                .form-group.row.mb-0
                  .col-md-6.offset-md-4
                    #form-submit.btn.btn-primary
                      | Send Password Reset Link
                .form-group.row.mb-0
                  col-md-8.m-auto
                    label#attampts-input.form-check-label(for='remember')
                      span.invalid-feedback(role='alert')
                        strong